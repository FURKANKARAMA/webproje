@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">

           @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                  <a class="nav-link text-dark" style="text-decoration: none" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><span style="color:#000000">Hoşgeldin @User.Identity.Name&emsp;&emsp;</span></a>
                 <a class="nav-link text-dark" style="text-decoration: none" asp-area="" asp-controller="urunler" asp-action="Index"><span style="color:#000000">Güncelle</span></a>
                 </li>
                <li class="nav-item">
                    <form class="form-inline"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" style="text-decoration: none" asp-area="Identity" asp-page="/Account/Register"><span style="color:#000000">Kayıt Ol</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" style="text-decoration: none" asp-area="Identity" asp-page="/Account/Login"><span style="color:#000000">Giriş Yap</span></a>
                </li>
            }
</ul>
